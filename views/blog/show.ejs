<%- include('../partials/header') %> 
<%- include('../partials/navbar') %> 



<div class="container mb-3 mt-4">
    <div class="row m-3">
        <%- include('../partials/flash') %> 
        <div class="col-lg-12" style="margin-bottom:0.5rem;">
            <div class="card">
                <img src="<%= blog.img %>" class="card-img-top" alt="..." style="height: 500px;">
            </div>
            <div>
                <h1 class="lead display-3"><%= blog.title %> </h1>
            </div>
        </div>
        <div class="col-lg-12 mb-3">
            <p><%= blog.desc %></p>
        </div>
        <% if(currentUser){ %> 
        <form action="/user/<%= currentUser._id %>/favourites/<%= blog._id %>" method="POST">
            <button class="btn btn-light btn-lg btn-outline-success">Add To Favourites</button>
        </form>
        <% } %>
    </div>
</div>


<div class="container mb-4 mt-5">
    <div class="row m-3">
        
        <div class="col-lg-7">
            <h1>Leave a Review</h1>
            <form class="validated-form" action="/blog/<%=blog._id%>/review" method="POST" style="max-width:80%;" novalidate>
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" class="form-range" min="0" max="5" name="rating" id="rating">
                </div>
            
                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea class="form-control" id="desc" cols="35" rows="3" name="comment" required></textarea>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
               
                <button type="submit" class="btn btn-success">Submit</button>
              </form>     
        </div>

        <div class="col-lg-5">
            <div class="mb-3 mt-3">
                <%for(let review of blog.reviews){%>
                    <div class="card mb-3">
                        <div class="card-header">
                          User
                        </div>
                        <div class="card-body">
                          <h5 class="card-title">Rating :<%=review.rating%></h5>
                          <p class="card-text"><%=review.comment%></p>
                        </div>
                      </div>
    
                <%}%>
              </div>
        </div>
    </div>
</div>



<%- include('../partials/footer') %> 
