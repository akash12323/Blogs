<%- include('../partials/header') %> 
<%- include('../partials/navbar') %> 



<div class="container mb-3 mt-4">
    <div class="row m-3">
        <%- include('../partials/flash') %> 
        <div class="col-lg-12" style="margin-bottom:0.5rem;">
            <div class="card">
                <img src="<%= blog.img %>" class="card-img-top" alt="..." style="height: 500px;">
            </div>
            <div>
                <h1 class="lead display-3"><%= blog.title %> </h1>
            </div>
        </div>
        <div class="col-lg-12 mb-3">
            <p><%= blog.desc %></p>
        </div>
        <div class="col-lg-4">
            <a href="/user/<%= currentUser._id %>/blog/<%= blog._id %>/edit" class="btn btn-lg btn-primary">&nbsp; Edit &nbsp;</a>
            <br><br>
            <form action="/user/<%= currentUser._id %>/blog/<%= blog._id %>?_method=DELETE" method="post">
                <button class="btn btn-lg btn-outline-danger">DELETE</button>
            </form>
        </div>
    </div>
</div>


<div class="container mb-4 mt-5">
    <div class="row m-3">
        <div class="col-lg-5">
            <div class="mb-3 mt-3">
                <%for(let review of blog.reviews){%>
                    <div class="card mb-3">
                        <div class="card-header">
                          User
                        </div>
                        <div class="card-body">
                          <h5 class="card-title">Rating :<%=review.rating%></h5>
                          <p class="card-text"><%=review.comment%></p>
                        </div>
                      </div>
                <%}%>
              </div>
        </div>
    </div>
</div>



<%- include('../partials/footer') %> 
